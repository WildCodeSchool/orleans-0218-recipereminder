<div class="col-xs-12 col-sm-6 col-md-4">
    <a href="/admin/event/{{ event.id }}">
        <figure class="thumbnail">
            {% if event.img is empty %}
                <img src="/assets/images/eventPlaceHolder.jpg" alt="recipe without image" class="">
            {% else %}
                <img src="/assets/upload/{{ event.img }}" alt="{{ event.name }}" class="">
            {% endif %}
            <figcaption class="caption">
                <h3>{{ event.name |capitalize }}</h3>
                <p>Le {{ event.date |date("d/m/Y")}}</p>
            </figcaption>
            <form action="/event/deleteLinkRecipe/{{ event.id }}" method="POST">
                <input type="hidden" name="id" value="{{ event.id }}">
                <button type="submit" class="btn delinkBtn">Désindexer l'événement</button>
            </form>
        </figure>
    </a>
</div>
